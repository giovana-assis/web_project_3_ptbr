# http://editorconfig.org
# Uma propriedade especial que deve ser especificada na parte superior do arquivo fora de quaisquer seções #. Defina como true para parar a
root = true
[*]
# Estilo de indentação
# Valores possíveis - tab, espaço
indent_style = space
# Tamanho de indentação em caracteres de espaço único
# Valores possíveis - um valor integral, tab
indent_size = 2
# Caracteres de fim de linha
# Valores possíveis - lf, crlf, cr
end_of_line = lf
# Codificação de caracteres de arquivo
# Valores possíveis - latin1, utf-8, utf-16be, utf-16le
charset = utf-8
# Denota se o espaço em branco no final das linhas deve ser apagado
# Valores possíveis - true, false
trim_trailing_whitespace = true
# Desativar para Markdown porque o espaço em branco é significativo
[*.md]
trim_trailing_whitespace = false
# Denota se o arquivo deve terminar com uma nova linha
# Valores possíveis: - true, false
insert_final_newline = true